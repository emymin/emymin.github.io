{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Jekyll Serve",
            "type": "shell",
            "command": "bundle exec jekyll serve --livereload --host=0.0.0.0",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Add Worlds to World List",
            "type": "shell",
            "command": "python ${workspaceFolder}/add_worlds.py ${input:worlds_param}",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "worlds_param",
            "description": "World IDs, separated by space:",
            "default": "",
            "type": "promptString"
        },
    ]
}